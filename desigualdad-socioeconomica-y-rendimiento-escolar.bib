@article{antoniomiguelperezsanchezModeloCasualexplicativoSobre1998,
  title = {Un Modelo Casual-Explicativo Sobre La Influencia de Las Variables Psicosociales En El Rendimiento Acad{\'e}mico},
  author = {{Antonio Miguel P{\'e}rez S{\'a}nchez} and S{\'a}nchez, Antonio Miguel P{\'e}rez and {Antonio Miguel P{\'e}rez S{\'a}nchez} and {Antonio Miguel P{\'e}rez S{\'a}nchez} and {Antonio Miguel P{\'e}rez S{\'a}nchez} and {Juan Lu{\'i}s Castej{\'o}n Costa} and {Juan Luis Castej{\'o}n Costa} and Costa, Juan Luis Castej{\'o}n},
  year = {1998},
  month = jan,
  volume = {50},
  number = {2},
  pages = {171--185},
  abstract = {La finalidad del presente trabajo de investigacion es establecer un modelo explicativo de las interrelaciones que se producen entre distintas variables de caracter individual y psicosocial, y el rendimiento academico. Se definen asi en un modelo causal las posibles vias de influencia directa e indirecta que se dan entre las variables, con el proposito de identificar los factores causales y las variables mediadoras que definen mas adecuadamente la dinamica de relaciones que se producen dentro y entre los factores psicosociales de tipo sociocultural, familiar y escolar, asi como entre los factores personales, incluidos en el modelo. Para ello se efectua un analisis causal mediante el programa de ecuaciones estructurales eqs, con el que hemos obtenido un modelo que explica el 76,6\% de la varianza del rendimiento academico en una muestra de 270 alumnos de 7o y 8o de EGB. Los resultados del analisis muestran que variables de tipo personal, como la inteligencia, juegan un importante papel en la determinacion del aprovechamiento escolar, pero tambien muestran que las percepciones que los alumnos tienen de su clima familiar y escolar ejercen una influencia significativa en la explicacion del criterio.},
  annotation = {MAG ID: 191662582}
}

